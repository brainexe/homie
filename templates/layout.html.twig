<!DOCTYPE html>
<html lang="de">
<head>
	<title>{% block title %}Raspberry{% endblock %}</title>
	<meta charset="utf-8">

	<link href="/Bootstrap/css/bootstrap.min.css" rel="stylesheet">
	<link href="/Bootstrap/css/bootstrap-theme.min.css" rel="stylesheet">

	<script src="/js/jquery-2.1.0.min.js"></script>
	<script src="/Bootstrap/js/bootstrap.min.js"></script>
	<script src="/js/moment.min.js"></script>
	<script src="/js/script.js"></script>

	<meta name="viewport" content="width=device-width, initial-scale=1">
	{% block meta %}{% endblock %}

	<style type="text/css">
		body {
			padding-top: 50px;
		}

		.starter-template {
			padding: 10px 10px;
			text-align: center;
		}

		.panel-toggle {
			cursor: pointer;
		}
	</style>
</head>
<body role="document">
	{% block navigation %}
		<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/">Raspberry</a>
				</div>
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav">
						<li><a href="{% url "sensor.index" %}">{% trans "Sensors" %}</a></li>
						<li><a href="{% url "gpio.index" %}">GPIO</a></li>
						<li><a href="{% url "radio.index" %}">{% trans "Radios" %}</a></li>
						<li><a href="{% url "espeak.index" %}">{% trans "Speek" %}</a></li>
						<li><a href="{% url "webcam.index" %}">Webcam</a></li>
						<li><a href="{% url "status.index" %}">Status</a></li>
						{% if not isLoggedIn() %}
							<li><a href="/login/">Login</a></li>
							<li><a href="/register/">Register</a></li>
						{% else %}
							<li><a href="/logout/">Logout</a></li>
						{% endif %}
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Lang <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><a href="?locale=en_EN">EN</a></li>
								<li><a href="?locale=de_DE">DE</a></li>
							</ul>
						</li>
					</ul>
				</div>
			</div>
		</div>
	{% endblock %}
	<div class="container">
		<div class="starter-template">
			{% for type, flashs in getFlashBag() %}
				{% for flash in flashs %}
					<div class="alert alert-{{ type }} alert-dismissable" data-dismiss="alert">
						<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
						{{ flash }}
					</div>
				{% endfor %}
			{% endfor %}
			{% block content %}{% endblock %}
		</div>
	</div>
</body>
</html>
