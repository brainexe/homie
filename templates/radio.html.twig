{% extends "layout.html.twig" %}

{% block title %}Radio{% endblock %}

{% block content %}
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>#</th>
				<th>Name</th>
				<th>Enable</th>
				<th>Disable</th>
			</tr>
		</thead>

		<tbody>
			{% for radio in radios %}
				<tr>
					<td>{{ radio.code }}|{{ radio.pin }}</td>
					<td title="{{ radio.description }}">{{ radio.name }}</td>
					<td><a href="/radio/{{ radio.id }}/1/" class="btn btn-success">Enable</a></td>
					<td><a href="/radio/{{ radio.id }}/0/" class="btn btn-danger">Disable</a></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<form action="/radio/add/" method="POST" class="navbar-forms navbar-lefts">
		<div class="row">
			<div class="col-lg-5">
				<div class="input-group">
					  <span class="input-group-btn">
						<button class="btn btn-default" type="button">Name</button>
					  </span>
					<input type="text" name="name" class="form-control" placeholder="Name"/>
				</div>
			</div>
			<div class="col-lg-5">
				<div class="input-group">
					  <span class="input-group-btn">
						<button class="btn btn-default" type="button">Description</button>
					  </span>
					<input type="text" name="description" class="form-control" placeholder="Description"/>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-2">
				<div class="input-group">
					  <span class="input-group-btn">
							<button class="btn btn-default" type="button">Code</button>
					  </span>
					<input type="text" class="form-control" max="5" min="0" name="code" placeholder="00000"/>
				</div>
			</div>
			<div class="col-lg-2">
				<div class="input-group">
					  <span class="input-group-btn">
						<button class="btn btn-default" type="button">Pin</button>
					  </span>
					<input type="text" class="form-control" max="2" min="0" name="pin" placeholder="1"/>
				</div>
			</div>
			<div class="col-lg-2">
				<div class="input-group">
				  <span class="input-group-btn">
						<button class="btn btn-default" type="submit">Add</button>
				  </span>
				</div>
			</div>
		</div>
	</form>
{% endblock %}
