{% extends "layout.html.twig" %}

{% block title %}Espeak{% endblock %}

{% block content %}
	<form action="/espeak/speak/" method="POST" class="navbar-forms navbar-lefts">
		<div class="row">
			<div class="col-lg-6">
				<div class="input-group">
					<span class='input-group-addon'>Text</span>
					<input type="text" name="text" class="form-control" placeholder="Text"/>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="input-group">
					<input type="submit" value="Speak" class="btn btn-success btn-lg"/>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-4">
				<div class="input-group">
					<span class='input-group-addon'>Volume</span>
					<input type="number" class="form-control" max="200" min="0" name="volume" value="150"/>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="input-group">
					<span class='input-group-addon'>Speed</span>
					<input type="number" class="form-control" max="200" min="0" name="speed" value="80"/>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="input-group">
					<span class='input-group-addon'>Speak</span>
					<select name="speaker" class="form-control">
						{% for id, text in speakers %}
							<option value="{{ id }}">{{ text }}</option>
						{% endfor %}
					</select>
				</div>
			</div>
		</div>
	</form>
{% endblock %}

