{
	"name": "matze/raspberry",
	"description": "Raspberry",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"authors": [
		{
			"name": "Matze",
			"email": "matze@mdoetsch.de"
		}
	],
	"autoload": {
		"psr-0": {
			"Raspberry": "src/"
		}
	},
	"repositories": [
		{
			"type": "composer",
			"url": "http://satis.mdoetsch.de"
		}
	],

	"require": {
		"matze/core": "dev-master"
	},

	"require-dev": {
		"behat/mink": "1.4.*@stable",
		"behat/mink-goutte-driver": "*"
	},

	"config": {
		"bin-dir": "bin/"
	},

	"scripts": {
		"post-update-cmd": "rm cache/dic_*.php -f && php console cache:clear"
	}
}
