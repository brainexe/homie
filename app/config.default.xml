<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services">
    <parameters>
        <parameter key="environment">development</parameter>
        <parameter key="node.id">0</parameter>

        <parameter key="socket.internal.port">8081</parameter>
        <!--<parameter key="socket.url">/socket</parameter>-->
        <parameter key="socket.url">http://localhost:%socket.internal.port%/socket</parameter>

        <parameter key="metawear.port">8082</parameter>

        <parameter key="gpio.executable">gpio</parameter>

        <parameter key="rc_switch.command">sudo /opt/rcswitch-pi/send</parameter>

        <parameter key="espeak.command">espeak</parameter>
        <parameter key="webcam.executable.photo">fswebcam {{file}}</parameter>
        <parameter key="webcam.executable.sound">timeout $(({{duration}}+2)) arecord -f cd -d {{duration}} -t raw | lame -x -r - {{file}}</parameter>
        <parameter key="webcam.executable.video">streamer -t 0:0:2 -f rgb24 -r {{duration}} -o {{file}}</parameter>
        <!--<parameter key="webcam.executable.photo">raspistill -o %s</parameter>-->

        <parameter key="ifttt.key"></parameter>
        <!-- Connect an Arduino -->
        <parameter key="serial.port">/dev/ttyACM*</parameter>
        <parameter key="serial.baud">57600</parameter>

        <!-- Remote storage for webcam images ...-->
        <parameter key="filesystem.remote.url">https://owncloud.example.com/webdav/</parameter>
        <parameter key="filesystem.remote.username">homie</parameter>
        <parameter key="filesystem.remote.password">homie</parameter>
    </parameters>
</container>
